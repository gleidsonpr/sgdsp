        <td>
            @Html.DisplayFor(modelItem => item.qntBebidasSemana)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.possuiTatuagem)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.qntTempoTatuagem)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.utilizaDrogaIlicita)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descricaoDrogras)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.historicoDeDoenca)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descricaoDoencas)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.hepatite)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.jejum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dataQuestionario)
        </td>
        <td>
            @Html.ActionLink("Editar questionario", "Edit", new { id=item.idQuestionario }) |
            @Html.ActionLink("Detailhes de questionario", "Details", new { id=item.idQuestionario }) |
            @Html.ActionLink("Deletar questionario", "Delete", new { id=item.idQuestionario })
        </td>
    </tr>
}

</table>
