    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Doador.TipoDoSangue.tipoDeSangue)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fuma)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.qntCigarros)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.bebe)
