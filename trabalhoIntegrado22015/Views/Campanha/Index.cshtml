@model IEnumerable<trabalhoIntegrado22015.Models.Campanha>

@{
    ViewBag.Title = "Index";
}

<h2>CAMPANHA  DE DOAÇÃO DE SANGUE</h2>

<p>
    @Html.ActionLink("Cadastrar campanha", "Create", null, new { @class = "btn btn-primary btn-large" })


</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.uct.descricaoUct)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nomeCampanha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dataCampanhaInicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dataCampanhaFinal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tipoCampanha)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.uct.descricaoUct)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nomeCampanha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dataCampanhaInicio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dataCampanhaFinal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tipoCampanha)
        </td>
        <td>
            @Html.ActionLink("Editar campanha", "Edit", new { id=item.idCampanha }) 
            <br />
            @Html.ActionLink("Detailhes de campanha", "Details", new { id=item.idCampanha }) 
            <br />
            @Html.ActionLink("Deletar campanha", "Delete", new { id=item.idCampanha })
        </td>
    </tr>
}

</table>
