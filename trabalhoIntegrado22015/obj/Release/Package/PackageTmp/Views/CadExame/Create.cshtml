@model trabalhoIntegrado22015.Models.ExameDoLaboratorio

@{
    ViewBag.Title = "Create";
}

<h2>Cadastro</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Cadastrar Exames Disponibilizados Pelo Laboratorio</h4>
       
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.idExame, "Nome do Exame", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("idExame", String.Empty)
                @Html.ValidationMessageFor(model => model.idExame)
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Cadastrar" class="btn btn-default" />
            </div>
        </div>
    </div>
}


