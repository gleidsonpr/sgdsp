@model IEnumerable<trabalhoIntegrado22015.Models.Agendamento>

@{
    ViewBag.Title = "Agendamento";
}

<h2>Agendamento</h2>

<p>
    @Html.ActionLink("Cadastrar novo agendamento", "Create", null, new { @class = "btn btn-primary btn-large" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Doador.nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Uct.nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.observacao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dataAgendada)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Doador.nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Uct.nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.observacao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dataAgendada)
        </td>
        <td>
            @Html.ActionLink("Editar agendamento", "Edit", new { id=item.idAgendamento }) |
            @Html.ActionLink("Detailhes de agendamento", "Details", new { id=item.idAgendamento }) |
            @Html.ActionLink("Deletar agendamento", "Delete", new { id=item.idAgendamento })
        </td>
    </tr>
}

</table>

