@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("Sair", "LoginFuncionario", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Bem vindo " + User.Identity.GetUserName() + "!", "Painel", "LoginFuncionario", routeValues: null, htmlAttributes: new { title = "Painel" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        
        
        <li>@Html.ActionLink("Login", "Login", "LoginFuncionario")</li>
        
    </ul>
}
