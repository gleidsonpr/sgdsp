@model IEnumerable<trabalhoIntegrado22015.Models.Exame>

@{
    ViewBag.Title = "Cadastrar novo exame";
}

<h2>Cadastrar novo exame</h2>

<p>
    @Html.ActionLink("Cadastrar novo exame", "Create", null, new { @class = "btn btn-primary btn-large" })
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nomeExame)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.departamento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.metodoExame)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.observacao)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nomeExame)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.departamento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.metodoExame)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.observacao)
        </td>
        <td>
            
            @Html.ActionLink("Editar exame", "Edit", new { id=item.idExame }) |
            @Html.ActionLink("Details", "Details", new { id=item.idExame }) |
            @Html.ActionLink("Deletar exame", "Delete", new { id=item.idExame })
        </td>
    </tr>
}

</table>
